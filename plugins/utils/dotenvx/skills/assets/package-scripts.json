{
  "scripts": {
    "// Development": "────────────────────────────────────",
    "dev": "dotenvx run -f .env -- npm run dev:start",
    "dev:start": "node app.js",

    "// Staging": "────────────────────────────────────",
    "deploy:staging": "dotenvx run -f .env.staging -- npm run deploy:run",
    "synth:staging": "dotenvx run -f .env.staging -- cdk synth",

    "// Production": "────────────────────────────────────",
    "deploy:production": "dotenvx run -f .env.production -- npm run deploy:run",
    "synth:production": "dotenvx run -f .env.production -- cdk synth",
    "deploy:run": "cdk deploy --require-approval never",

    "// Environment Management": "────────────────────────────────────",
    "env:encrypt": "dotenvx encrypt",
    "env:decrypt": "dotenvx decrypt",
    "env:encrypt:staging": "dotenvx encrypt -f .env.staging",
    "env:encrypt:production": "dotenvx encrypt -f .env.production",
    "env:decrypt:staging": "dotenvx decrypt -f .env.staging",
    "env:decrypt:production": "dotenvx decrypt -f .env.production",

    "// Setup & Verification": "────────────────────────────────────",
    "setup:dotenvx": "bash scripts/setup-dotenvx.sh",
    "verify:encryption": "bash scripts/verify-encryption.sh",
    "rotate:keys": "bash scripts/rotate-keys.sh",

    "// Testing": "────────────────────────────────────",
    "test": "dotenvx run -f .env.test -- npm run test:run",
    "test:run": "jest",

    "// Quality": "────────────────────────────────────",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.34.1"
  }
}
